<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.roka.smarthomeg4.MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu1_1" >

        <ImageView
            android:id="@+id/g4ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/g4" />
    </RelativeLayout>
    <!-- <android.support.v4.view.ViewPager -->
    <!-- android:id="@+id/pager" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="0dp" -->
    <!-- android:layout_weight="1" /> -->


    <!-- <com.roka.smarthomeg4.view_flow.CirclePageIndicator -->
    <!-- android:id="@+id/pagerIndicator" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_marginBottom="5dp" -->
    <!-- android:layout_marginTop="5dp" -->
    <!-- android:padding="3dp" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_menu1_2"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Zone/Area Control "
            android:textColor="@color/black" />

        <com.jess.ui.TwoWayGridView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/gridview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            app:cacheColorHint="#E8E8E8"
            app:gravity="center"
            app:horizontalSpacing="16dp"
            app:numColumns="auto_fit"
            app:numRows="auto_fit"
            app:rowHeight="100dp"
            android:listSelector="@android:color/transparent"
            app:scrollDirectionLandscape="horizontal"
            app:scrollDirectionPortrait="horizontal"
            app:stretchMode="spacingWidthUniform"
            app:verticalSpacing="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_menu1_2"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Central Control " 
            android:textColor="@color/black"/>

        <com.jess.ui.TwoWayGridView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/gridview1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            app:cacheColorHint="#E8E8E8"
            app:columnWidth="80dp"
            app:gravity="center"
            app:horizontalSpacing="16dp"
            app:numColumns="auto_fit"
            app:numRows="auto_fit"
            app:rowHeight="100dp"
            app:scrollDirectionLandscape="horizontal"
            app:scrollDirectionPortrait="horizontal"
            app:stretchMode="spacingWidthUniform"
            app:verticalSpacing="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_menu1_2"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Communal Service"
            android:textColor="@color/black" />

        <com.jess.ui.TwoWayGridView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/gridview2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            app:cacheColorHint="#E8E8E8"
            app:columnWidth="80dp"
            app:gravity="center"
            app:horizontalSpacing="16dp"
            app:numColumns="auto_fit"
            app:numRows="auto_fit"
            app:rowHeight="100dp"
            app:scrollDirectionLandscape="horizontal"
            app:scrollDirectionPortrait="horizontal"
            app:stretchMode="spacingWidthUniform"
            app:verticalSpacing="16dp" />
    </LinearLayout>

</LinearLayout>