<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/bg"
     android:orientation="vertical"
     >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/titleimg" >

            <ImageView
                android:id="@+id/backImageView"
                 android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/zoneNametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/settings_activity_titles"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
           
        </RelativeLayout>

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/networkSettingbtn"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/button3"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="@string/network_settings_btn" />

    
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/databaseBtn"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/button3"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="@string/database_upload" />
    
    
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/languagebtn"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/button3"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="@string/language_setting" />
    
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/zonebtn"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/button3"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="@string/Zone_settings" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
